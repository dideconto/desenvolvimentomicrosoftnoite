@{ List<Produto> produtos = ViewBag.Produtos; }

<!DOCTYPE html>

<html>
<head>
    <title>Gerenciamento de Produtos</title>
</head>
<body>
    <h2>Gerencimento de Produtos</h2>
    <a asp-action="Cadastrar" asp-controller="Produto">Cadastrar Produto</a>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Criado em</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Produto produtoCadastrado in produtos)
            {
<tr>
    <td>@produtoCadastrado.Id</td>
    <td>@produtoCadastrado.Nome</td>
    <td>@produtoCadastrado.Descricao</td>
    <td>@produtoCadastrado.Quantidade</td>
    <td>@produtoCadastrado.Preco.ToString("C2")</td>
    <td>@produtoCadastrado.CriadoEm</td>
    <td>
        <a asp-action="Remover"
           asp-controller="Produto"
           asp-route-id="@produtoCadastrado.Id">Remover</a>
    </td>
    <td>
        <a asp-action="Alterar"
           asp-controller="Produto"
           asp-route-id="@produtoCadastrado.Id">Alterar</a>
    </td>
</tr>
}
        </tbody>
    </table>

    <span><b>Quantidade de produtos: </b> @produtos.Count </span><br />
    <span><b>Dados atualizados: </b> @DateTime.Now </span>
</body>
</html>
